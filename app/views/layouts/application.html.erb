<!DOCTYPE html>
<html>
  <head>
    <title>Pictureblog</title>
      <!-- normalize.cssの読込 -->
  <link rel="stylesheet" href="normalize.css">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   
      <% if user_signed_in? %>
        <li><%= link_to "ブログ投稿", new_picture_path %></li>
        <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
        <li><%= link_to "お気に入り一覧", favorites_path %></li>
      <% else %>
         <li><%= link_to "新規登録", new_user_registration_path %></li>
        <li><%= link_to "ログイン", new_user_session_path %></li>
      <% end %>
     <li><%= link_to "画像投稿一覧画面", pictures_path %></li>
  
      <% if notice %>
        <p class="alert alert-notice"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-error"><%= alert %></p>
      <% end %>
  
    <% if user_signed_in? %>
    <div><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>：<%= current_user.email %></div>
    <% end %>
    

    <%= yield %>

  <!--  <footer>-->
  <!--ほげほげ  -->
  <!--</footer>-->
     
  </body>
  
</html>
