<h1>一覧画面</h1>

<div class="container">
  




  <div class="row">
    <% @pictures.each do |picture| %>
      <div class="col-xs-12 col-md-6 blog-panel">
        <table border=0>

          <tr>
            <td> <%= image_tag(picture.image) %></td>
          </tr>

          <tr>
            <td><%= picture.content %></td>
          </tr> 
          <tr>
          <%# ログインしていたら詳細を確認する を表示させる %>            
          <% if user_signed_in? %>
            <td><%= link_to '詳細を確認する', picture_path(picture.id) %></td>
          <% end %>
          </tr>
          <tr>
            
        <%# current_user.id と 現在のpicture.user.id が一致しているか %>
        <%# binding.pry %>
         <% if picture.user_id == current_user %>
            <td><%= link_to "画像とコメントを編集する", 
                  edit_picture_path(picture.id), 
                  data: { confirm: '本当に編集していいですか？' } %></td>
          </tr>
          <tr>
            <td><%= link_to 'ブログを削除する', 
                  picture_path(picture.id), method: :delete ,
                  data: { confirm: '本当に削除していいですか？' } %></td>

          <% end %>
          
          </tr> 
        </table>
      </div>
    <% end %>
  </div>
</div>

