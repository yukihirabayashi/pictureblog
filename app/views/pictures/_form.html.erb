<%= form_with(model: @picture, local: true ,url: confirm_pictures_path ) do |form| %>

  <% if @picture.errors.any? %>
  <div id="error_explantion">
    <h2><%= @picture.errors.count %>件のエラーがあります。</h2>
    <ul>
      
   <% @picture.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
      </ul>
      </div>
      <% end %>
      

<center>
  <table border="0">

    <tr>
      <div class="picture_title">
      <td>
        <%= form.label :コメント %>
      </td>  
      <td>
        <%= form.text_field :content %>
      </td>
      </div>
    </tr>

  <table border="0">
    <tr>
      <div class="picture_title">
      <td>
        <%= form.label :Photo %>
      </td>  
      <td>
          <%= form.file_field :image, id: :picture_image %>
          <%= form.hidden_field :image_cache %>
      </td>
      </div>
    </tr>
</table>    

<p>
  
  <%= form.submit %>
<% end %>

<%= link_to "画像投稿一覧画面にもどる", pictures_path %>